# Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
GRPC_HOST=0.0.0.0
GRPC_PORT=9090
LOG_LEVEL=info

# Database Configuration
MYSQL_DSN=user:pass@tcp(host:3306)/auth?parseTime=true

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Token TTL (in minutes)
JWT_ACCESS_TOKEN_TTL=15
JWT_REFRESH_TOKEN_TTL=10080
CONFIRM_TOKEN_TTL=1440
RESET_TOKEN_TTL=60

# App identity / key (key is only needed when this app calls internal routes of other services).
APP_SERVICE_NAME=auth-service
APP_API_KEY=
